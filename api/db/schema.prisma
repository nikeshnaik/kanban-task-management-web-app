datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Board {

  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  status      String    @default("todo")
  subtasks    Subtask[]
  board_name  String
  column_name String

}

type Subtask {

  id          String  @map("_id") @db.ObjectId
  title       String
  isCompleted Boolean @default(false)

}

